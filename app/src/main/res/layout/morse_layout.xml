<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    tools:context="org.kaan.morsecodetranslator.BluetoothActivity">

    <TextView
        android:id="@+id/morseTopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:textSize="30sp"
        android:text="You are connected." />

    <SeekBar
        android:id="@+id/progressBar"
        android:layout_below="@+id/morseTopText"
        android:layout_marginTop="10dp"
        android:max="100"
        android:minWidth="300dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="50" />

    <TextView
        android:id="@+id/thresholdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/progressBar"
        android:textSize="22sp"
        android:text="Threshold: 2000 ms" />

    <TextView
        android:id="@+id/mainMorseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30sp" />


</RelativeLayout>
